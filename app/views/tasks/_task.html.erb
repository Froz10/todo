<div class="row clearfix">
 <% if task.status? %>
  <div class="complete">
    <%= link_to "Mark as Complete", complete_project_task_path(@project, task.id), data: {method: :put} %>
  </div>
  <div class="task">
    <p style="opacity: 0.4;"><strike><%= task.name %></strike></p>
  </div>
  <div class="trash">
    <%= link_to "Delete", project_task_path(@project, task.id), method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
 <% else %>
  <div class="complete">
    <%= link_to "Mark as Complete", complete_project_task_path(@project, task.id), data: {method: :put} %>
  </div>
  <div class="task">
    <p><%= task.name %></p>
  </div>
  <div class="trash">
    <%= link_to "Delete", project_task_path(@project, task.id), method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
  <% end %>
</div>


